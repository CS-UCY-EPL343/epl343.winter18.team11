<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/test2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="38dp"
        android:text="" />

    <TextView
        android:id="@+id/test3"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/test2"
        android:layout_toEndOf="@+id/test2"
        android:layout_toRightOf="@+id/test2"
        android:text="" />

    <TextView
        android:id="@+id/test4"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/test3"
        android:layout_toEndOf="@+id/test3"
        android:layout_toRightOf="@+id/test3"
        android:text="" />

    <ImageButton
        android:id="@+id/edit_employee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/test4"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:text=""
        app:srcCompat="@android:drawable/ic_menu_edit" />




</RelativeLayout>
